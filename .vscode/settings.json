{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.renderWhitespace": "boundary",
  "files.encoding": "utf8",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "search.exclude": {
    "TypeScreeps/dist/**": true,
    "TypeScreeps/node_modules/**": true,
    "TypeScreeps/typings/**": true,
  },
  "typescript.tsdk": "./TypeScreeps/node_modules/typescript/lib",
  "standard.enable": false,

  "macros":
  {
    "saveAndCommit":
    [
        "workbench.action.files.saveAll",
        { "command": "workbench.action.tasks.runTask", "args": "screepsCommit" }
    ]
  }
}
